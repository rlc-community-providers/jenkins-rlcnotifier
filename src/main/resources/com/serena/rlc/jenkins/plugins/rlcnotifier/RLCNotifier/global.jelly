<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <j:set var="helpURL" value="/plugin/rlcnotifier"/>

    <f:section title="Serena Release Control Server">
        <f:entry title="">
            <f:repeatable var="site" items="${descriptor.sites}">
                <table width="100%">
                    <f:entry title="Profile Name" help="${helpURL}/help-profile.html">
                        <f:textbox name="rlc.profileName" value="${site.profileName}"/>
                    </f:entry>
                    <f:entry title="Serena RLC URL" help="${helpURL}/help-url.html">
                        <f:textbox name="rlc.url" value="${site.url}" default="http://localhost:8085/rlc"/>
                    </f:entry>

                    <f:entry title="User Name" help="${helpURL}/help-user.html">
                        <f:textbox name="rlc.user" value="${site.user}"/>
                    </f:entry>
                    <f:entry title="Password" help="${helpURL}/help-password.html">
                        <f:password name="rlc.password" value="${site.password}"/>
                    </f:entry>
                    <f:entry title="">
                        <div style="text-align: right">
                            <f:repeatableDeleteButton/>
                            <f:validateButton
                                    title="${%Test Connection}" progress="${%Testing...}"
                                    method="testConnection" with="rlc.url,rlc.user,rlc.password"/>
                        </div>
                    </f:entry>
                </table>
            </f:repeatable>
        </f:entry>
    </f:section>
</j:jelly>